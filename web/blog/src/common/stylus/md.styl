.markdown-body
  width 100%
  p
    margin 10px auto 0 auto
    line-height 27.2px
    font-weight 400
    font-size 16px
    font-family -apple-system,SF UI Text,Arial,PingFang SC,Hiragino Sans GB,Microsoft YaHei,WenQuanYi Micro Hei,sans-serif
    >code
      font-family Menlo, Monaco, Consolas, "Courier New", monospace
      margin 3px
      padding 1px 4px
      background-color #d8e1ef
      vertical-align middle
      border-radius 4px
      border none
      //color #000000
      font-size 14px
      white-space pre-wrap
      font-weight 600
  blockquote
    background #f9f9f9
    border-left 10px solid #5599ff
    margin 1.5em 10px
    padding 0.5em 10px
    quotes "\201C""\201D""\2018""\2019"
    &:before
      color #5599ff
      content open-quote
      font-size 4em
      line-height 0.1e0m
      margin-right 0.25em
      vertical-align -0.4em
    p
      display inline
  strong
    font-weight normal
  //color #fd5b03
  italic
    font-weight normal
    color #9955ff
  body
    font-size 15px
    padding 30px
  pre
    .hljs
      background-color #030406
      border-radius 4px
      padding 0.5em
    margin 5px auto 10px auto
    display block
    width 100%
    font-family Consolas "Courier New" Courier FreeMono monospace
    line-height 130%
    font-size 18px
    code
      display block
      overflow-x auto
      white-space per
      font-family Menlo,Monaco,Consolas,Courier New,monospace
  h1, h2, h3, h4, h5, h6
    word-break break-all !important
    margin 20px 0
    line-height 1.2
    text-align left
    font-weight bold
    padding-left 5px
  h1
    border-left 6px solid #ff3333 !important
    font-size 24px !important
  h2
    border-left 4px solid #3a8619 !important
    font-size 20px !important
  h3
    border-left 4px solid #71ba51 !important
    font-size 17px !important
  h4
    border-left 4px solid #0174df !important
    font-size 14px !important
  h5
    border-left 4px solid #58acfa !important
    font-size 14px !important
  h6
    border-left 4px solid #58d3f7 !important
    font-size 14px !important
  a
    text-decoration none !important
    font-size 14px !important
  ul, ol
    padding-left 30px
  li
    line-height 24px
  hr
    height 4px
    padding 0
    margin 16px 0
    background-color #e7e7e7
    border 0 none
    overflow hidden
    box-sizing content-box
    border-bottom 1px solid #ddd
  img
    border-radius 4px
    box-shadow: 0 0 20px 5px #bcbcbe
    margin 20px auto
    max-width 100%
    width auto
    overflow hidden
    outline-offset 2px
    display block
  table
    width 100%
    max-width 65em
    border 1px solid #dedede
    margin 15px auto
    border-collapse collapse
    empty-cells show
    th
      font-weight bold
      text-align center !important
      background rgba(158, 188, 226, 0.2)
      white-space nowrap
    tbody
      tr
        &:nth-child(2n)
          background rgba(158, 188, 226, 0.12)
    td
      &:nth-child(1)
        white-space nowrap
    tr
      &:hover
        background #efefef
  table th,
  table td
    height 35px
    border 1px solid #dedede
    padding 0 10px
  .table-area
    overflow auto
  tt
    color #d127ce
    margin 0 2px
    padding 0 5px
    white-space nowrap
    border 1px solid #eaeaea
    background-color #f8f8f8
    border-radius 3px
